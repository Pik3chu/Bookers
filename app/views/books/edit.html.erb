<% if flash[:success] %>
  <p class="update-success"><%= flash[:success] %></p>
<% end %>

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div id="errortext">
    <p><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</p>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url: book_path(@book), method: :patch do |f| %>

  <div class="text">
  <h4>Title</h4>
  <%= f.text_field :title %>
  </div>

  <div class="text">
  <h4>Body</h4>
  <%= f.text_area :body %>
  </div>

  <div class = "action">
  <%= f.submit 'Update Book' %>
  </div>

  <%= link_to 'Show', book_path(@book), style: 'color: black;' %> |
  <%= link_to 'Back', books_path, style: 'color: gray;' %>

<% end %>
